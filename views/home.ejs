<div class="page-content">
    <div class="content-title">
        <h1>TRACKS</h1>
        <!-- <p>Click on a song to play. Filter by tags to find specific songs.</p> -->
    </div>
    
    <div class="content-container">
        

        <div class="search-container">
            <form action="" class="search-form">
                <div>
                    <i class="far fa-search"></i>
                </div>
                <input type="text" class="form-search" name="search" placeholder="Search">
            </form>
            <!-- <span><i class="fas fa-filter"></i></span> -->
        </div>

        <div class="list-container">
            <ul class="song-list">
                <li class="song-item">
                    <span class="art"></span>
                    <span class="title">Title</span>
                    <span class="bpm">BPM</span>
                    <span class="length">Length</span>
                    
                </li>
                
                
            </ul>
        </div>
    </div>
</div>
</div>

<div class="player">
<div>
    <div class="player-2">
        <div class="slider-container">
            <!-- <p class="current-time">0:00</p> -->
            <input type="range" value="1" class="seek-slider" min="1" max="10000" oninput="seek()">
            <!-- <p class="end-time">0:00</p> -->
        </div>
    </div>
    <div class="player-1">
        <div class="player-info">
            <div class="player-art">
                <img src="img/1606190530328.png" alt="">
            </div>
            <div class="player-title">
                <p>test</p>
            </div>
        </div>
        <div class="player-control">
            <div class="player-prev" onclick="prevSong()">
                <i class="fas fa-step-backward"></i>
            </div>
            <div class="player-play" onclick="setPlayState()">
                <i class="fas fa-play-circle" style="display:none"></i>
                <i class="fas fa-pause-circle" ></i>
            </div>
            <div class="player-next" onclick="nextSong()">
                <i class="fas fa-step-forward"></i>
            </div>
        </div>
        <div class="player-volume">
            <div class="volume-display" onclick="toggleVolume()">
                <i class="fas fa-volume-up"></i>
                <i class="fas fa-volume-mute" style="display:none"></i>
            </div>
            <div class="slider-container-2">
                <input type="range" min="1" max="100"
        value="99" class="volume-slider" oninput="setVolume()">
            </div>
        </div>
    </div>
</div>
</div>